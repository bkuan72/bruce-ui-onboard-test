{
  "compilerOptions": 
  {
    "target": "es5",                         
    "module": "amd", 
    "allowJs": true,
    "strict": false, 
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": 
    [
      "dom",
      "es5",
      "es6",
      "es2015.promise",
      "es2017"
    ]
  },
  "include": 
  [
    "src/**/*"
  ]
}
